  <!--Endpoint -->
<div local-class="item-seperation">
<hr><i> Endpoint</i>
</div>

  <div local-class="item-row clearfix">
        <div local-class="item-row-title">
           <div local-class="bloc1" data-tooltip="Manipulate Agent's endpoints" data-position="top left">
             Endpoint:
          </div>
        </div>
        {{#if this.editEndpoint}}
       <div local-class="border-line">
         {{#checkbox-list items=availableEndpoints onCheck=(action "handleCheck") as |list|}}

               <div local-class="block">

                            <div local-class="bloc1" >
                              {{list.checkbox}}

                            </div>

                            <div local-class="bloc2" data-tooltip={{ list.item.uri}} data-position="top left" >
                              {{ list.item.label}}
                            </div>
                </div>

      {{/checkbox-list}}


         <div local-class="buttonrow">

              <button local-class="item-row-apply" class="ui positive right icon button" {{action "savenewendpoints" checkedPermissions }}>
                <i class="pencil icon no-side-margins"></i>
              </button>

              <button local-class="item-row-cancel" class="ui negative right icon button" {{action "cancel"}}>
                <i class="close icon no-side-margins"></i>
              </button>

         </div>
       </div>
        {{/if}}
        {{#unless this.editEndpoint}}

          <div local-class="item-row-content" local-class="block" >

            <div local-class="item-row-value" local-class="bloc2">

               {{#each activeAgent.endpoints as |endpoint|}}
                 <div local-class="bullet" >
                   <li >
                         <div local-class="bloc3" data-tooltip={{ endpoint.uri}} data-position="top left" >
                          {{endpoint.label}}
                         </div>
                   </li>
                 </div>
                 {{/each}}

            </div>

            <div local-class="item-row-buttons">
              <button local-class="item-row-edit" class="ui yellow icon button rightmost" {{action "edit" "endpoint"  activeAgent.endpoint}}>
                <i class="edit icon no-side-margins"></i>
              </button>
            </div>
          </div>
        {{/unless}}
      </div>





</div>



